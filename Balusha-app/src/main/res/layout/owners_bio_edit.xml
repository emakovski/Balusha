<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/photo_of_owner_in_bio_edit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/light_green"
        android:contentDescription="@string/photo_of_owner"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/no_photo_owner_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginStart="35dp"
        android:text="@string/no_photo"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/photo_of_owner_in_bio_edit"
        app:layout_constraintStart_toStartOf="@id/photo_of_owner_in_bio_edit"/>

    <TextView
        android:id="@+id/name_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:text="@string/owners_name_mask"
        android:textColor="@color/orange"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/photo_of_owner_in_bio_edit"
        app:layout_constraintStart_toEndOf="@id/photo_of_owner_in_bio_edit"/>

    <EditText
        android:id="@+id/name_of_owner_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_name"
        android:inputType="textPersonName"
        android:textColor="@color/text_green"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/name_mask_bio_edit"
        app:layout_constraintStart_toEndOf="@id/photo_of_owner_in_bio_edit"/>

    <TextView
        android:id="@+id/surname_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:text="@string/owners_surname_mask"
        android:textColor="@color/orange"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/name_of_owner_in_bio_edit"
        app:layout_constraintStart_toEndOf="@id/photo_of_owner_in_bio_edit"/>

    <EditText
        android:id="@+id/surname_of_owner_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_surname"
        android:inputType="textPersonName"
        android:textColor="@color/text_green"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/surname_mask_bio_edit"
        app:layout_constraintStart_toEndOf="@id/photo_of_owner_in_bio_edit"/>

    <TextView
        android:id="@+id/country_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/country_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/photo_of_owner_in_bio_edit"
        app:layout_constraintStart_toStartOf="@id/photo_of_owner_in_bio_edit"/>

    <EditText
        android:id="@+id/country_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_country"
        android:inputType="text"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/photo_of_owner_in_bio_edit"
        app:layout_constraintStart_toEndOf="@id/country_mask_bio_edit"/>

    <TextView
        android:id="@+id/city_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/city_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/country_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/country_mask_bio_edit"/>

    <EditText
        android:id="@+id/city_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_city"
        android:inputType="text"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/country_mask_bio_edit"
        app:layout_constraintStart_toEndOf="@id/city_mask_bio_edit"/>

    <TextView
        android:id="@+id/street_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/street_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/city_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/city_mask_bio_edit"/>

    <EditText
        android:id="@+id/street_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_street"
        android:inputType="text"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/city_mask_bio_edit"
        app:layout_constraintStart_toEndOf="@id/street_mask_bio_edit"/>

    <TextView
        android:id="@+id/house_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/house_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/street_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/street_mask_bio_edit"/>

    <EditText
        android:id="@+id/house_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_house"
        android:inputType="number"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/street_mask_bio_edit"
        app:layout_constraintStart_toEndOf="@id/house_mask_bio_edit"/>

    <TextView
        android:id="@+id/bldng_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/bldng_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/house_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/house_mask_bio_edit"/>

    <EditText
        android:id="@+id/building_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_bldng"
        android:inputType="text"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/house_mask_bio_edit"
        app:layout_constraintStart_toEndOf="@id/bldng_mask_bio_edit"/>

    <TextView
        android:id="@+id/apt_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/apt_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/bldng_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/bldng_mask_bio_edit"/>

    <EditText
        android:id="@+id/apt_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:autofillHints="testHint"
        android:hint="@string/hint_apt"
        android:inputType="text"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/bldng_mask_bio_edit"
        app:layout_constraintStart_toEndOf="@id/apt_mask_bio_edit"/>

    <TextView
        android:id="@+id/phone_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/phone_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/apt_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/apt_mask_bio_edit"/>

    <EditText
        android:id="@+id/phone_number_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="testHint"
        android:hint="@string/hint_phone"
        android:inputType="phone"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/phone_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/phone_mask_bio_edit"/>

    <TextView
        android:id="@+id/email_mask_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_mask"
        android:textColor="@color/text_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/phone_number_in_bio_edit"
        app:layout_constraintStart_toStartOf="@id/phone_number_in_bio_edit"/>

    <EditText
        android:id="@+id/email_in_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="testHint"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/medium_green"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/email_mask_bio_edit"
        app:layout_constraintStart_toStartOf="@id/email_mask_bio_edit"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/email_in_bio_edit"
        app:layout_constraintTop_toBottomOf="@id/email_in_bio_edit">


        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/medium_green"
            app:fabAlignmentMode="end"
            app:hideOnScroll="true"
            app:layout_scrollFlags="scroll|enterAlways" />

        <ImageButton
            android:id="@+id/button_back_to_menu_owners_bio_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_baseline_menu_open_24"
            android:backgroundTint="@color/background"
            android:contentDescription="@string/back_to_main" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_in_owners_bio_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:contentDescription="@string/fab_owners_bio_edit"
            android:src="@drawable/ic_baseline_done_24"
            app:layout_anchor="@id/bottom_app_bar" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>