<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="57dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/medium_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/content">

                <ImageView
                    android:id="@+id/photo_of_owner_in_bio_edit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/light_green"
                    android:contentDescription="@string/photo_of_owner"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <EditText
                    android:id="@+id/name_of_owner_in_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_name"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_light"
                    android:textSize="20sp"
                    android:textColorHint="@color/text_light"
                    app:layout_constraintStart_toEndOf="@id/photo_of_owner_in_bio_edit"
                    app:layout_constraintTop_toTopOf="@id/photo_of_owner_in_bio_edit"
                    app:layout_constraintBottom_toTopOf="@id/surname_of_owner_in_bio_edit"
                    />

                <EditText
                    android:id="@+id/surname_of_owner_in_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="@string/hint_surname"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_light"
                    android:textSize="20sp"
                    android:textColorHint="@color/text_light"
                    app:layout_constraintStart_toEndOf="@id/photo_of_owner_in_bio_edit"
                    app:layout_constraintTop_toBottomOf="@id/name_of_owner_in_bio_edit"
                    app:layout_constraintBottom_toBottomOf="@id/photo_of_owner_in_bio_edit"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/country_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/country_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/country_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints="testHint"
                    android:background="@drawable/recycle_tile"
                    android:hint="@string/hint_country"
                    android:inputType="text"
                    android:textColor="@color/text_accent"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/country_mask_bio_edit" />

                <TextView
                    android:id="@+id/city_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/city_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/country_in_bio_edit" />

                <EditText
                    android:id="@+id/city_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/recycle_tile"
                    android:autofillHints="testHint"
                    android:hint="@string/hint_city"
                    android:inputType="text"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/city_mask_bio_edit" />

                <TextView
                    android:id="@+id/street_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/street_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/city_in_bio_edit" />

                <EditText
                    android:id="@+id/street_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/recycle_tile"
                    android:layout_marginTop="10dp"
                    android:autofillHints="testHint"
                    android:hint="@string/hint_street"
                    android:inputType="text"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/street_mask_bio_edit" />

                <TextView
                    android:id="@+id/house_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/house_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/street_in_bio_edit" />

                <EditText
                    android:id="@+id/house_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/recycle_tile"
                    android:layout_marginTop="10dp"
                    android:autofillHints="testHint"
                    android:hint="@string/hint_house"
                    android:inputType="number"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/house_mask_bio_edit" />

                <TextView
                    android:id="@+id/bldng_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/bldng_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/house_in_bio_edit" />

                <EditText
                    android:id="@+id/building_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/recycle_tile"
                    android:layout_marginTop="10dp"
                    android:autofillHints="testHint"
                    android:hint="@string/hint_bldng"
                    android:inputType="text"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bldng_mask_bio_edit" />

                <TextView
                    android:id="@+id/apt_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/apt_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/building_in_bio_edit" />

                <EditText
                    android:id="@+id/apt_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/recycle_tile"
                    android:layout_marginTop="10dp"
                    android:autofillHints="testHint"
                    android:hint="@string/hint_apt"
                    android:inputType="text"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/apt_mask_bio_edit" />

                <TextView
                    android:id="@+id/phone_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/phone_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/apt_in_bio_edit" />

                <EditText
                    android:id="@+id/phone_number_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/recycle_tile"
                    android:autofillHints="testHint"
                    android:layout_marginTop="10dp"
                    android:hint="@string/hint_phone"
                    android:inputType="phone"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phone_mask_bio_edit" />

                <TextView
                    android:id="@+id/email_mask_bio_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/email_mask"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phone_number_in_bio_edit" />

                <EditText
                    android:id="@+id/email_in_bio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/recycle_tile"
                    android:autofillHints="testHint"
                    android:layout_marginTop="10dp"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_green"
                    android:textSize="20sp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/email_mask_bio_edit" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/medium_green"
        app:fabAlignmentMode="end" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@color/light_green"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_in_owners_bio_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:contentDescription="@string/fab_owners_bio_edit"
        android:src="@drawable/ic_baseline_done_24"
        app:layout_anchor="@id/bottom_app_bar" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>