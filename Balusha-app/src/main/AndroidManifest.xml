<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egor.balusha">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>

    <application
        android:name=".util.BalushaApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Balusha">
        <activity
            android:name=".activities.OwnerInfoAdd"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.PetInfoAdd"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.PetBio"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.PetInfoEdit"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.OwnerBio"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.OwnerInfoEdit"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.vaccination.view.VaccinationList"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.vaccination.view.VaccinationInfo"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha"/>
        <activity
            android:name=".activities.helminths.view.HelminthTreatList"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.helminths.view.HelminthTreatInfo"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.fleasticks.view.FleasTicksList"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.fleasticks.view.FleasTicksInfo"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.reproduction.view.ReproductionList"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.reproduction.view.ReproductionInfo"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.Settings"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity
            android:name=".activities.main.view.MainActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha" />
        <activity android:name=".activities.main.view.NewNotifActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Balusha"/>
        <activity android:name=".util.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true" />
    </application>

</manifest>